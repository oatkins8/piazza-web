<% content_for :title, t(".title") %>

<layout-columns class="columns is-centered">
  <layout-column class="column box is-5 mt-6 p-5 m-4">
    <h1 class="title has-text-centered">
      <%= t(".title") %>
    </h1>
    <!--DEPRECATION WARNING: Passing nil to the :model argument is deprecated and will raise in Rails 8.0 (called from _app_views_sessions_new_html_erb__1614049508277058158_21400 at /Users/oliveratkins/code/piazza-web/app/views/sessions/new.html.erb:8)-->
    <%= form_with(
          model: @session,
          url: sign_in_path,
          scope: :user,
          class: "is-flex is-flex-direction-column"
        ) do |form| %>
        
      <div class="block">
        <%= form.label :email, class: "label" %>
        <%= form.email_field :email, class: "input" %>
      </div>

      <div class="block">
        <%= form.label :password, class: "label" %>
        <%= form.password_field :password, class: "input" %>
      </div>

      <%= form.submit t(".sign_in"),
        class: "button is-primary is-large is-align-self-flex-end mb-3 mt-3" %>
    <% end %>
  </layout-column>
</layout-columns>
